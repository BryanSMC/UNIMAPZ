{
  "name": "map-unipaz-project",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "map",
    "page"
  ],
  "scripts": {
    "co": "npm run lint && git add . && sui-mono commit",
    "lint": "eslint .",
    "dev": "npm run dev --workspace=map",
    "dev:page": "npm run build --workspace=map && npm run dev --workspace=page",
    "build": "npm run build --workspace=map",
    "build:page": "npm run build --workspace=page",
    "deploy": "npm run build --workspace=map && npm run deploy --workspace=page"
  },
  "devDependencies": {
    "@s-ui/mono": "2.26.0",
    "cpy-cli": "4.1.0",
    "eslint": "7.32.0",
    "eslint-config-standard-jsx": "10.0.0",
    "eslint-config-standard-react": "11.0.1",
    "rimraf": "3.0.2",
    "standard": "16.0.4",
    "vite": "2.9.1",
    "vite-plugin-html": "3.2.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "extends": [
      "standard",
      "standard-jsx",
      "standard-react"
    ],
    "rules": {
      "array-element-newline": [
        "error",
        {
          "minItems": 3
        }
      ],
      "react/react-in-jsx-scope": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "assets",
    "dist"
  ]
}
